{
  "manifest_version": 2,
  "name": "amastigote open-ver.",
  "version": "0.4.0",
  "description": "Cooperative Favourites List for Groups/Teams/Individuals.\n\nThis is an open source version, only for non-business use.\nFor more information and help please move steps to https://github.com/amastigote/\n\n© 2017 amastigote™ & hwding. All Rights Reserved.",
  "icons": {
    "48": "/pic/cn_1.png"
  },
  "applications": {
    "gecko": {
      "id": "m@amastigote.com"
    }
  },
  "permissions": [
    "*://*/",
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "browser_style": false,
    "default_icon": "/pic/cn_0.png",
    "default_popup": "/html/popup.html"
  },
  "background": {
    "scripts": [
      "/js/jquery-3.2.1.min.js",
      "/js/ext-core.js",
      "/js/ext-background.js"
    ]
  },
  "options_ui": {
    "page": "/html/preference.html",
    "browser_style": false
  }
}
